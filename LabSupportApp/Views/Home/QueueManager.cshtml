@model List<StudentUser>

@{
    ViewBag.Title = "QueueManager";
}

<style>

    .openClass {
        font-size: 12px;
        border-collapse: collapse;
        width: 100%;
    }

        .openClass th {
            background-color: #000b59;
            border: 4px solid white;
            color: white;
            text-align: center;
            border-radius: 10px;
        }

        .openClass td, th {
            border: 2px dashed #a7e6fc;
            text-align: left;
            padding: 8px;
            color: #676767;
        }

        .openClass tr:nth-child(even) {
            background-color: #a7e6fc;
        }

        .openClass tr:nth-child(odd) {
            background-color: white;
        }
</style>

<div class="mainContainerAdmin" style="overflow:hidden; overflow-y: auto; margin-top: 5vh">
    <div class="row">

        <div>
            <a class="QManagerBtn" href="@Url.Action("EndSession", "home")" role="button" style="position: absolute; top: 10px; right: 10px;">
                <i class="fas fa-trash-alt"></i> End Session
            </a>
        </div>

        <div>
            <a class="QManagerBtn" href="@Url.Action("index", "home")" role="button" style="padding: 1rem 4rem; position: absolute; top: 10px; left: 10px;">
                <i class="fas fa-chevron-left"></i> Home
            </a>
        </div>
    </div>

    <div class="admin" style="margin-top: 8vh;">

        <h1 class="queueTitle">Lab Name: @ViewBag.LabName</h1>
        @*<h1 class="admin">@ViewBag.LabName</h1>*@

        <div class="errorMessage" style="margin-top: 4vh">
            @if (ViewBag.TimeOver != null)
        {
            <strong style="font-size: 2rem;">This lab is running @ViewBag.TimeOver minutes over</strong>
        }

            @if (ViewBag.TimeRemaining != null)
        {
            <strong style="color: #49b867;">There are @ViewBag.TimeRemaining minutes remaining</strong>
        }


        </div>
        <div style="margin-top: 1vh;">
            <p class="queueNum"><i class="queueTitle" style="font-weight: bold;"> @ViewBag.StudentsLeft</i>  students remaining</p>
        </div>


        <div class="row">

            <a class="JoinQueueBtn" href="@Url.Action("NextStudent", "home")" role="button">
                Next Student
            </a>
        </div>


    </div>
    <div class="row" style="margin-top: 3vh;">
        <div>
            <a class="AdminBtn" href="@Url.Action("AddAdminToQueue", "home")" role="button" style="padding: 0.5rem 5rem;">
                Add Lab Tutor To Queue
            </a>
        </div>
    </div>
    <div class="row" style="margin-top: 2vh;">
        <div>
            <a class="AdminBtn" href="@Url.Action("RemoveAdminFromQueue", "home")" role="button">
                Remove Lab Tutor From Queue
            </a>
        </div>
    </div>

    <div class="admin" style="margin-top: 1vh; font-size: 2rem;">
        <div class="col-lg-6 col-lg-offset-3">
            <div style="margin-top: 1vh;">
                <p>Code: <strong class="queueNum">@ViewBag.code</strong></p><br />
                <a class="JoinQueueBtn" href="@Url.Action("QueueManager", "home")" role="button">
                    <i class="fas fa-sync"></i>
                </a>
            </div>
            <div style="overflow-y: auto;">
                <h2>Students that added a description</h2>
                <table class="openClass">
                    <tr>
                        <th>Description</th>
                        <th>Student</th>
                        <th>Elapsed Time</th>
                        <th>See Student</th>
                    </tr>
                    @if (Model != null)
                    {

                    @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.ElapsedTime
                        </td>
                        <td style="text-align:center">
                            <a href="@Url.Action("PullToHead", "home", new { Name = item.Name })"><i class="fas fa-forward"></i></a>
                        </td>
                    </tr>
                        }

                    }


                </table>
            </div>

        </div>
    </div>


</div>


<script type="text/javascript">

    setTimeout(function () {
        window.location.replace('@Url.Action("QueueManager", "home")');
    }, 5000)

</script>

