@model List<StudentUser>

@{
    ViewBag.Title = "QueueManager";
}

<style>

    .openClass {
        font-size: 12px;
        border-collapse: collapse;
        width: 100%;
    }

        .openClass th {
            background-color: #000b59;
            border: 4px solid white;
            color: white;
            text-align: center;
            border-radius: 10px;
        }

        .openClass td, th {
            border: 2px dashed #a7e6fc;
            text-align: left;
            padding: 8px;
        }

        .openClass tr:nth-child(even) {
            background-color: #a7e6fc;
        }
</style>

<div class="mainContainer" style="overflow-y: auto; margin-top: 5vh">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div style="margin-top: 2vh;">
                <a class="hyperlinkText" href=@Url.Action("index", "home")><i class="fas fa-chevron-left"></i> Home</a>

            </div>

        </div>
    </div>

    <div class="row">

        <h1>Lab Support</h1>
        <strong>@ViewBag.LabName</strong>

        <div style="margin-top: 3vh;">
            <p>There are currently <i style="font-weight: bold;"> @ViewBag.StudentsLeft<i class="numberOfStudents"></i></i> remaining in the queue.</p>
        </div>

        
        <div class="row">

            <div class="col-lg-3 col-lg-offset-3" style="margin-top: 2vh; align-content: center;">
                <a class="JoinQueueBtn" href="@Url.Action("NextStudent", "home")" role="button">
                    Next Student
                </a>

            </div>

            <div class="col-lg-3" style="margin-top: 2vh; align-content: center;">
                <a class="JoinQueueBtn" href="@Url.Action("EndSession", "home")" role="button">
                    End Session
                </a>
            </div>

        </div>


    </div>
    <div class="row" style="margin-top: 3vh;">
        <div>
            <a class="AdminBtn" href="@Url.Action("AddAdminToQueue", "home")" role="button" style="padding: 0.5rem 5rem;">
                Add Admin To Queue
            </a>
        </div>
    </div>
    <div class="row" style="margin-top: 2vh;">
        <div>
            <a class="AdminBtn" href="@Url.Action("RemoveAdminFromQueue", "home")" role="button">
                Remove Admin From Queue
            </a>
        </div>
    </div>

    <div class="row" style="margin-top: 1vh; font-size: 2rem;">
        <div class="col-lg-6 col-lg-offset-3">
            <div style="margin-top: 1vh;">
                <p>Code: <strong>@ViewBag.code</strong></p><br />
                <a class="JoinQueueBtn" href="@Url.Action("QueueManager", "home")" role="button">
                    <i class="fas fa-sync"></i>
                </a>
            </div>
            <div style="overflow-y: auto;">
                <h2>Students that added a description</h2>
                <table class="openClass">
                    <tr>
                        <th>Description</th>
                        <th>Student Email</th>
                        <th>Elapsed Time</th>
                        <th>Pull To Front</th>
                    </tr>
                    @if (Model != null)
                    {

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.ElapsedTime
                                </td>
                                <td style="text-align:center">
                                    <a href="@Url.Action("PullToHead", "home", new { Name = item.Name })"><i class="fas fa-forward"></i></a>
                                </td>
                            </tr>
                        }

                    }


                </table>
            </div>

        </div>
    </div>


</div>



